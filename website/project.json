{
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "name": "website",
  "targets": {
    "build-www": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docusaurus build --out-dir www",
        "cwd": "website"
      },
      "dependsOn": ["^build"],
      "inputs": [
        "^styles",
        "^assets",
        "default",
        {
          "env": "DT_VERSION"
        },
        {
          "env": "TRAVIS_TAG"
        },
        {
          "env": "TRAVIS_BRANCH"
        }
      ],
      "outputs": ["{projectRoot}/www"]
    }
  }
}
