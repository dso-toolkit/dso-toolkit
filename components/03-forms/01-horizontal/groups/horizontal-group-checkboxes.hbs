<fieldset class="form-group checkboxes">
  <legend class="control-label">
    {{ label }}
    {{#unless required }}
      <span class="optional">optioneel</span>
    {{/unless}}
  </legend>
  <div class="field-container">
    {{#each options }}
      <div class="checkbox">
        <label>
          <input type="checkbox" name="{{ ../id }}" value="{{ value }}"
            {{{ifattr 'disabled' disabled }}}
            {{{ifattr 'readonly' readonly }}}
            {{{ifattr 'checked' checked }}} />
          {{ label }}
        </label>
      </div>
    {{/each}}
    {{#if helpText }}
      {{> '@help-block' }}
    {{/if}}
  </div>
</fieldset>
