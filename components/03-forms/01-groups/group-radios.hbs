<fieldset class="form-group dso-radios{{#if state}} dso-{{ state }}{{/if}}{{#if required }} dso-required{{/if}}">
  <div class="dso-label-container">
    <legend class="control-label">
      {{ label }}
    </legend>
  </div>
  <div class="dso-field-container">
    {{#each options }}
      <div class="dso-selectable">
        <input type="radio" id="{{ id }}" name="{{ ../id }}" value="{{ value }}"
          {{{ifattr 'disabled' disabled }}}
          {{{ifattr 'readonly' readonly }}}
          {{{ifattr 'checked' checked }}} />
        <label for="{{ id }}">
          {{ label }}
        </label>
      </div>
    {{/each}}
    {{#if errorText }}
      <p class="dso-message">{{ errorText }}</p>
    {{/if}}
    {{#if helpText }}
      {{> '@help-block' }}
    {{/if}}
  </div>
</fieldset>
