{{#each form-groups }}
  <fieldset class="form-group radios">
    <legend class="control-label">{{ label }}</legend>
    {{#each options }}
      <div class="radio">
        <input type="radio" id="{{ id }}" name="{{ ../id }}" value="{{ value }}"
          {{{ifattr 'disabled' disabled }}}
          {{{ifattr 'readonly' readonly }}}
          {{{ifattr 'checked' checked }}} />
        <label for="{{ id }}">
          {{ label }}
        </label>
      </div>
    {{/each}}
    {{#if helpText }}
      {{> '@help-block' }}
    {{/if}}
  </fieldset>
{{/each}}
