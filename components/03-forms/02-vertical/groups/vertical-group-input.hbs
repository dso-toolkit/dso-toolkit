<div class="form-group input {{ inputType }}{{#if hasFeedback }} has-feedback{{/if}}">
  <label for="{{ id }}">
    {{ label }}
    {{#if optional }}
      <span class="optional">optioneel</span>
    {{/if}}
  </label>
  <input type="{{ inputType }}" id="{{ id }}" class="form-control"
    {{{ifattr 'aria-describedby' helpText (helpTextId id)}}}
    {{{ifattr 'disabled' disabled }}}
    {{{ifattr 'readonly' readonly }}}
    {{{ifattr 'required' required }}} />
  {{#if hasFeedback }}
    <span class="{{ feedbackIcon }} form-control-feedback" aria-hidden="true"></span>
  {{/if}}
  {{#if required }}
    <span class="required">Dit is een verplicht veld</span>
  {{/if}}
  {{#if helpText }}
    {{> '@help-block' }}
  {{/if}}
</div>
