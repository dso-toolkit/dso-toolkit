<button type="{{ type }}" class="btn btn-{{ modifier }} di-icon-{{position}}" {{{ifattr 'disabled' disabled }}}>
  {{#if icon}}
    {{#if (eq position 'before')}}
      {{> '@icon' icon=icon }}
    {{/if}}
  {{/if}}
  {{ label }}
  {{#if icon}}
    {{#if (eq position 'after')}}
      {{> '@icon' icon=icon }}
    {{/if}}
  {{/if}}
</button>
