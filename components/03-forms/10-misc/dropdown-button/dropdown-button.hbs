<div class="dropdown{{#if open }} open{{/if}}{{#if align }} dso-align-{{align}}{{/if}}">
  <button type="button" class="btn btn-link dropdown-toggle" id="{{ id }}" aria-haspopup="true" aria-expanded="{{#if open }}true{{else}}false{{/if}}">{{ label }}</button>
  {{#if open }}
    <ul class="dropdown-menu{{#if selectable }} dso-selectable-items{{/if}}" aria-labelledby="{{ id }}">
      {{#each items }}
        {{#unless @first }}
          <li role="separator" class="divider"></li>
        {{/unless}}
        {{#each this }}
          <li>
          <a href="#" {{#if selected }}class="selected"{{/if}}>{{ label }}</a>
          </li>
        {{/each}}
      {{/each}}
    </ul>
  {{/if}}
</div>
