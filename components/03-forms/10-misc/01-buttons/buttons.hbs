<div class="row">
  <div class="col-md-2">
    {{> '@button' type='button' label='.btn-default' modifier='default' url='#' }}
  </div>
  <div class="col-md-2">
    {{> '@button' type='button' label='.btn-link.btn-align' modifier='link btn-align' url='#' }}
  </div>
</div>
