<div class="dso-example-wrapper">
  <div class="dso-example-text">
    <h2>kleine button</h2>
  </div>
  <div class="dso-example">
    <table class="table">
      <caption>Verschijningsvormen van de kleine button (<code>.btn-sm</code>).</caption>
      <thead>
        <tr>
          <th scope="col">Beschrijving</th>
          <th scope="col">Weergave</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Normaal</td>
          <td>
            <p>{{> '@button' type='button' label='kleine button' modifier='primary btn-sm' }}</p>
          </td>
        </tr>
        <tr>
          <td>Hover</td>
          <td class="example-hover">
            <p>{{> '@button' type='button' label='kleine button' modifier='primary btn-sm' }}</p>
          </td>
        </tr>
        <tr>
          <td>Disabled</td>
          <td>
            <p>{{> '@button' type='button' label='kleine button' modifier='primary btn-sm' disabled=true }}</p>
          </td>
        </tr>
        <tr>
          <td>Icoon links</td>
          <td>
            <p>{{> '@button' type='button' label='kleine button' modifier='primary btn-sm' icon='angle-left' url='#' }}</p>
          </td>
        </tr>
        <tr>
          <td>Icoon rechts</td>
          <td>
            <p>{{> '@button' type='button' label='kleine button' modifier='primary btn-sm' iconAfter='angle-right' url='#' }}</p>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
