<div class="dso-example-wrapper">
  <div class="dso-example-text">
    <h2>Secundaire button</h2>
  </div>
  <div class="dso-example">
    <table class="table">
      <caption>Verschijningsvormen van de secundaire button (<code>.btn-default</code>).</caption>
      <thead>
        <tr>
          <th scope="col">Beschrijving</th>
          <th scope="col">Weergave</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Normaal</td>
          <td>
            <p>{% render '@button', {type: 'button', modifier: 'default', label: 'Secundaire button'} %}</p>
          </td>
        </tr>
        <tr>
          <td>Hover</td>
          <td class="example-hover">
            <p>{% render '@button', {type: 'button', modifier: 'default', label: 'Secundaire button'} %}</p>
          </td>
        </tr>
        <tr>
          <td>Active</td>
          <td class="example-active">
            <p>{% render '@button', {type: 'button', modifier: 'default', label: 'Secundaire button'} %}</p>
          </td>
        </tr>
        <tr>
          <td>Disabled</td>
          <td>
            <p>{% render '@button', {type: 'button', modifier: 'default', label: 'Secundaire button', disabled: true} %}</p>
          </td>
        </tr>
        <tr>
          <td>Icoon links</td>
          <td>
            <p>{% render '@button', {type: 'button', modifier: 'default', label: 'Secundaire button', icon: 'angle-left'} %}</p>
          </td>
        </tr>
        <tr>
          <td>Icoon rechts</td>
          <td>
            <p>{% render '@button', {type: 'button', modifier: 'default', label: 'Secundaire button', iconAfter: 'angle-right'} %}</p>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
