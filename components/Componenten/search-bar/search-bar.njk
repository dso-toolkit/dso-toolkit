<div class="dso-search-bar">
  <div class="dso-search-bar-input">
    {% if icon -%}
      <span class="dso-search-icon" aria-hidden="true"></span>
    {%- endif -%}
    <input type="text"{% if placeholder %} placeholder="{{ placeholder }}"{% endif %}{% if value %} value="{{ value }}"{% endif %} />
    <button type="button">
      Zoekopdracht legen
    </button>
  </div>
  <button type="button" {{ className('btn btn-default', [button === 'hidden', 'sr-only']) }}>
    Zoeken
  </button>
</div>
