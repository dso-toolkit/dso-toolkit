<nav aria-label="Sitepad">
  <ol class="breadcrumb">
    {%- for crumb in crumbs %}
      {%- if loop.last -%}
        <li class="active" aria-current="page">{{ crumb.label }}</li>
      {%- else -%}
        <li><a href="{{ crumb.url }}">{{ crumb.label }}</a></li>
      {%- endif -%}
    {% endfor %}
  </ol>
</nav>
