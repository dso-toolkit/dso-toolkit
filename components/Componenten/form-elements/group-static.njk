<div class="form-group dso-static">
  <div class="dso-label-container">
    <span class="control-label">{{ label }}</span>
    {% if infoText %}
      {% render '@info-button', {infoOpen: infoOpen} %}
    {% endif %}
  </div>
  <div class="dso-field-container">
    <p>{{ value }}</p>
  </div>
  {% if infoOpen %}
    {% render '@info', {infoText: infoText} %}
  {% endif %}
</div>
