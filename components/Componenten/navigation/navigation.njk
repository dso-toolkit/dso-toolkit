{%- for nav in navs %}
  <nav class="dso-navigation">
    <ul class="list-unstyled">
      {%- for item in nav.items -%}
        <li {{ className([item.items, 'dso-has-items'], [item.active, 'active']) }} >
          {%- if item.items %}
            {% render '@icon', {icon: 'chevron-down'} %}
          {% endif %}
          {%- if loop.index > 1 -%}
            <a href="#">{{- item.label -}}</a>
          {% else %}
            <span class="dso-navigation-subhead">{{- item.label -}}</span>
          {% endif %}
          {% if item.items %}
            <ul class="list-unstyled">
              {%- for subitem in item.items -%}
                <li {{ className([subitem.active, 'active']) }}><a href="#">{{- subitem.label -}}</a></li>
              {% endfor -%}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>
{% endfor %}
