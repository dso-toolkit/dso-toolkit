{{#accordion}}
  {{#each sections }}
    {{#accordionSection title }}
      <div class="dso-rich-content">
        <p>Dit is de inhoud van <strong>{{ title }}</strong></p>
      </div>
      {{#if sections }}
        {{#accordion}}
          {{#each sections }}
            {{#accordionSection title }}
              <div class="dso-rich-content">
                <p>Dit is een geneste accordion. De inhoud is van <strong>{{ title }}</strong>. Zie de <em>Notes</em> van dit component.</p>
              </div>
            {{/accordionSection}}
          {{/each}}
        {{/accordion}}
      {{/if}}
    {{/accordionSection}}
  {{/each}}
{{/accordion}}
