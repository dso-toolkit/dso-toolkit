{% extends "layouts/skeleton.nunj" %}
{% import "macros/navigation.nunj" as nav %}

{% block page %}

<div class="container-fluid" id="frame">

    <header class="row" style="border-bottom: 1px solid #ccc; margin-bottom: 0;">
        {% include 'partials/header.nunj' %}
    </header>

    <div class="row" data-role="body">

      <div class="col-md-10 col-md-push-2" data-role="main">
        <div id="pjax-container">
          {% block content %}{% endblock %}
        </div>
      </div>

      <div data-role="frame-resize-handle"></div>

      <div class="col-md-2 col-md-pull-10" data-role="sidebar" style="background-color: #f5f5f5; border-right: 1px solid #e1e1e1; padding-bottom: 16px; padding-top: 16px">
        <div class="dso-search-bar">
          <div class="dso-search-bar-input">
            <span class="dso-search-icon" aria-hidden="true"></span>
            <input type="text" placeholder="Filteren" />
            <button type="button">
              Zoekopdracht legen
            </button>
          </div>
          <button type="button" class="btn btn-default sr-only">
            Zoeken
          </button>
        </div>
        {% include 'partials/navigation/navigation.nunj' %}
    </div>
  </div>
</div>

{% endblock %}
