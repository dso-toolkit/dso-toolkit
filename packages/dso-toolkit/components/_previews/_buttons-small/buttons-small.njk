<div class="dso-example-wrapper">
  <div class="dso-example-text">
    <h2>kleine button</h2>
  </div>
  <div class="dso-example">
    <table class="table">
      <caption>Verschijningsvormen van de kleine button (<code>.btn-sm</code>).</caption>
      <thead>
        <tr>
          <th scope="col">Beschrijving</th>
          <th scope="col">Weergave</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Normaal</td>
          <td>
            <p>{% render '@button', {type: 'button', modifier: 'primary btn-sm', label: 'kleine button'} %}</p>
          </td>
        </tr>
        <tr>
          <td>Hover</td>
          <td class="example-hover">
            <p>{% render '@button', {type: 'button', modifier: 'primary btn-sm', label: 'kleine button'} %}</p>
          </td>
        </tr>
        <tr>
          <td>Small</td>
          <td class="example-active">
            <p>{% render '@button', {type: 'button', modifier: 'primary btn-sm', label: 'kleine button'} %}</p>
          </td>
        </tr>
        <tr>
          <td>Disabled</td>
          <td>
            <p>{% render '@button', {type: 'button', modifier: 'primary btn-sm', label: 'kleine button', disabled: true} %}</p>
          </td>
        </tr>
        <tr>
          <td>Icoon links</td>
          <td>
            <p>{% render '@button', {type: 'button', modifier: 'primary btn-sm', label: 'kleine button', icon: 'angle-left', url: '#'} %}</p>
          </td>
        </tr>
        <tr>
          <td>Icoon rechts</td>
          <td>
            <p>{% render '@button', {type: 'button', modifier: 'primary btn-sm', label: 'kleine button', iconAfter: 'angle-right', url: '#'} %}</p>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
