<div class="dso-example-wrapper">
  <div class="dso-example-text">
    <h2>Sectiebericht met samenvatting validatiemeldingen</h2>
  </div>
  <div class="dso-example">
    <table class="table">
      <caption>Verschijningsvormen van sectiebericht met validatiemeldingen (<code>.alert-danger</code>).</caption>
      <thead>
        <tr>
          <th scope="col">Beschrijving</th>
          <th scope="col">Weergave</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>1 veld fout</td>
          <td class="plain-content">
            {% render '@alert', {modifier: 'danger', sronly: 'Fout:', message: '
              <div class="dso-rich-content">
                <p><a href="#">[Label]</a> is een verplicht veld.</p>
              </div>
            '} %}
          </td>
        </tr>
        <tr>
          <td>Meerdere velden fout</td>
          <td class="plain-content">
            {% render '@alert', {modifier: 'danger', sronly: 'Fout:', message: '
              <div class="dso-rich-content">
                <p>Een aantal velden is niet goed ingevuld.</p>
                <ul>
                  <li><a href="#">[Label]</a> is een verplicht veld.</li>
                  <li><a href="#">[Label]</a> is niet goed ingevuld.</li>
                </ul>
              </div>
            '} %}
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
