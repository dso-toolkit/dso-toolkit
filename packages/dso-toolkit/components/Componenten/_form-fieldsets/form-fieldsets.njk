{% for fieldset in fieldsets %}
  {% if fieldset.legend.length > 0 %}
    <fieldset>
    <legend {{ className([fieldset.legendScreenreaderOnly, 'sr-only']) }}>{{ fieldset.legend | safe }}</legend>
  {% endif %}
  {% for group in fieldset.groups %}
    {% render '@' + group.inputType, merge(group, {prefix: prefix}) %}
  {% endfor %}
  {% if fieldset.legend.length > 0 %}
    </fieldset>
  {% endif %}
{% endfor %}
