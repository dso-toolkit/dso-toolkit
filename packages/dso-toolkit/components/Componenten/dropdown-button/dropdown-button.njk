<dso-dropdown-menu {{ attributes([align, 'dropdown-align', align]) }} checkable={{ isCheckable }}>
  <button type="button" {{ className('dso-' + modifier) }} slot="toggle">
    <span>{{ label }}</span>
  </button>
  {% if open %}
    <div class="dso-dropdown-options">
      {% for group in groups %}
        {% if group.label %}
          <h2 class="dso-group-label">{{ group.label }}</h2>
        {% endif %}
        <ul aria-labelledby="{{ id }}">
          {% for item in group.items %}
            <li {{ className([item.checked, 'dso-checked']) }}>
              <a href="#">{{ item.label }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endfor %}
    </div>
  {% endif %}
</dso-dropdown-menu>
