<div {{ className('dropdown', [ariaExpanded, 'open']) }}>
  {% render '@button', {type: 'button', modifier: modifier, label: label, ariaPopup: ariaPopup, ariaExpanded: not not ariaExpanded} %}
  {% if ariaExpanded %}
    <div {{ className('dropdown-menu', modifiers) }}>
      {% for group in groups %}
        {% if group.label %}
          <h2 class="dso-group-label">{{ group.label }}</h2>
        {% endif %}
        <ul aria-labelledby="{{ id }}">
          {% for item in group.items %}
            <li {{ className([item.checked, 'dso-checked']) }}>
              <a href="#">{{ item.label }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endfor %}
    </div>
  {% endif %}
</div>
