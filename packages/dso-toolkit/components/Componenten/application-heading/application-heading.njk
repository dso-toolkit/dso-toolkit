<div class="dso-app-heading">
  {% if title %}
    <h1>{{ title }}</h1>
  {% endif %}
  {% if subtitle %}
    <h2 {{ className([step, 'dso-steps-indicator']) }}>
      {{ subtitle }}
      {% if step %}
        <span class="dso-step">
          {{ step }}
        </span>
      {% endif %}
    </h2>
  {% endif %}
</div>
