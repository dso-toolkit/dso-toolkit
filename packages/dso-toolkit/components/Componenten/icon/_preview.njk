<!DOCTYPE html>
<html lang="nl">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ _target.label }} | {{ _config.project.title }} - Component preview</title>
    <link rel="stylesheet" href="{{ '/styles/dso.css' | path }}" />

    <style type="text/css">
      .icon-container {
        margin: 0 auto;
        max-width: 600px;
      }

      ol {
        display: flex;
        flex-wrap: wrap;
        list-style: none;
        padding-left: 0;
      }

      ol::after {
        content: "";
        clear: both;
        display: block;
      }

      li {
        border: 5px solid #fff;
        background-color: #ddd;
        width: 25%;
        padding: 8px;
        text-align: center;
      }

      @media (max-width: 650px) {
        li {
          width: 33%;
        }
      }

      @media (max-width: 400px) {
        li {
          width: 50%;
        }
      }

      ol li div {
        margin-bottom: 8px;
      }

      li dso-icon,
      li svg.di {
        font-size: 1.5em;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="dso-rich-content icon-container">
        <ol>
          {{ yield | safe }}
        </ol>
      </div>
    </div>

    <script type="module" src="{{ '/@dso-toolkit_core/dso-toolkit/dso-toolkit.esm.js' | path }}"></script>
    <script nomodule src="{{ '/@dso-toolkit_core/dso-toolkit/dso-toolkit.js' | path }}"></script>

  </body>

</html>
