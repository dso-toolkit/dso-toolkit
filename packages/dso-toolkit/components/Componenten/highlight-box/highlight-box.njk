<div {{ className('dso-highlight-box', modifier, [step or (icon and label), 'dso-has-counter']) }}>
  {%- if step or (icon and label) %}
    <div class="dso-step-counter">
      {%- if icon and label %}
        <dso-icon icon="{{ icon }}"></dso-icon>
      {% else %}
        {{ step }}
      {% endif -%}
    </div>
  {% endif -%}
  {{ yield | safe }}
</div>
