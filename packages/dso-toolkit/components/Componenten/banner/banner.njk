<dso-banner status="{{ status }}">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="dso-rich-content">
          <h2>
          {% if status === "danger" -%}
            Storingsmelding:
          {%- endif %}
          {%- if status === "warning" -%}
            Onderhoudsmelding:
          {%- endif %}
          </h2>
          {{ message | safe }}
        </div>
        {% render '@button', {type: 'button', modifier: 'link', label: 'Sluiten', icon: 'times', iconOnly: true} -%}
      </div>
    </div>
  </div>
</dso-banner>
