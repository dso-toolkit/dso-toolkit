<div {{ className('dso-modal', [dialog.confirm, 'dso-confirm']) }} tabindex="-1"
  {{- attributes(
    [dialog, 'role', 'dialog'],
    [progress, 'role', 'alert'],
    [dialog, 'aria-labelledby', dialog.id]
  ) }}
>
  <div class="dso-dialog" role="document">
    {% if dialog %}
      <div class="dso-header">
        <h2 id="{{ dialog.id }}">{{ dialog.heading }}</h2>
        <button type="button" class="dso-close" aria-label="Sluiten"></button>
      </div>
    {% endif %}
    <div class="dso-body">
      {% if dialog %}
        <p>{{ body }}</p>
      {% else %}
        <dso-progress-indicator label="{{ progress.label }}" block></dso-progress-indicator>
      {% endif %}
    </div>
    {% if dialog %}
      <div class="dso-footer">
        {% for button in dialog.buttons %}
          {% render '@button', button %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>
