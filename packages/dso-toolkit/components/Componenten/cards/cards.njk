<dso-cards {{ attributes([flat, 'flat'], [interactionsLocation, 'interactions-location', interactionsLocation]) }}>
  {% for card in cards %}
    <dso-card>
      <a href="#">
        <div class="dso-rich-content">
          <h2>{{ card.label }}</h2>
          <p>{{ card.content | safe }}</p>
        </div>
      </a>
      {% if cards.interactions.length > 0 %}
        <dso-card-interactions>
          {% for interaction in cards.interactions %}
            <dso-card-interaction>
              <button type="button" class="btn btn-link">
                <span class="sr-only">{this.label}</span>
                <dso-icon icon={icon}></dso-icon>
              </button>
            </dso-card-interaction>
          {% endfor %}
        </dso-card-interactions>
      {% endif %}
    </dso-card>
  {% endfor %}
</dso-cards>
