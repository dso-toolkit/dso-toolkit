<dl {{ className(modifier) }}>
  {% if dsoColumns %}
    {%- for definition in definitions %}
      <div>
        <dt>{{ definition.term }}{% if definition.useSrOnlyColon %}<span class="sr-only">:</span>{% else %}:{% endif %}</dt>
        {%- for description in definition.descriptions %}
          <dd>{{ description.description | safe }}</dd>
        {%- endfor -%}
        {%- if definition.longread %}
          <dd>
            {%- for paragraph in definition.longread %}
              <p>{{ paragraph.paragraph }}</p>
            {%- endfor -%}
          </dd>
        {%- endif -%}
      </div>
    {% endfor -%}
  {% else %}
    {%- for definition in definitions %}
      <dt>{{ definition.term }}{% if definition.useSrOnlyColon %}<span class="sr-only">:</span>{% else %}:{% endif %}</dt>
      {%- for description in definition.descriptions %}
        <dd>
          {%- if description.columnsList -%}
            {{ description.columnsList | safe }}
          {%- else -%}
            {{ description.description | safe }}
          {%- endif -%}
        </dd>
      {%- endfor -%}
      {%- if definition.longread %}
        <dd>
          {%- for paragraph in definition.longread %}
            <p>{{ paragraph.paragraph }}</p>
          {%- endfor -%}
        </dd>
      {%- endif -%}
    {% endfor -%}
  {% endif %}
</dl>
