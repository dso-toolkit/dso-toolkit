{% render '@header', {menu: menu, breadcrumbs: breadcrumbs} %}
<main>
  <form class="form-horizontal">
    <h1>Object Laan van Eik en Duinen 125, Den Haag</h1>
    {% render '@form-steps', steps %}
    {% for alert in alerts %}
      <dso-alert status="{{ alert.status }}">
        {{ alert.message | safe }}
      </dso-alert>
    {% endfor %}
    <div class="dso-form-buttons">
      <div class="dso-aside">
        {% render '@button', {type: 'button', modifier: 'link', label: 'Ergens anders indienen'} %}
      </div>
    </div>
    {% render '@form', form %}
    <div class="dso-form-buttons">
      <div class="dso-aside">
        {% render '@button', {type: 'button', modifier: 'link', label: 'Vorige', icon: 'chevron-left'} %}
      </div>
      {% render '@button', {type: 'button', modifier: 'primary', label: 'Volgende', iconAfter: 'chevron-right'} %}
    </div>
  </form>
</main>

{% render '@footer' %}
