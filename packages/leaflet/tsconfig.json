{
  "compilerOptions": {
    "strict": true,
    "target": "es2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUncheckedIndexedAccess": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "lib": ["dom", "es2019"],
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
