{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "react",
  "targets": {
    "build": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "rimraf dist && tsc --project .",
        "cwd": "packages/react"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "build-www": {
      "dependsOn": ["^build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn storybook:build",
        "cwd": "packages/react"
      },
      "outputs": ["{projectRoot}/www"]
    }
  }
}
