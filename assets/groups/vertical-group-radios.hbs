<fieldset class="form-group dso-radios">
  <div class="dso-label-container">
    <legend class="control-label">
      {{ label }}
      {{#unless required }}
        <span class="dso-optional">optioneel</span>
      {{/unless}}
    </legend>
  </div>
  <div class="dso-field-container">
    {{#each options }}
      <div class="radio">
        <label>
          <input type="radio" name="{{ ../id }}" value="{{ value }}"
            {{{ifattr 'disabled' disabled }}}
            {{{ifattr 'readonly' readonly }}}
            {{{ifattr 'checked' checked }}} />
          {{ label }}
        </label>
      </div>
    {{/each}}
    {{#if helpText }}
      {{> '@help-block' }}
    {{/if}}
  </div>
</fieldset>
